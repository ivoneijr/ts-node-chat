{
  "PORT": {
    "required": true,
    "description": "Defines the port when server will be running",
    "default": 3000,
    "validators": [
      {
        "name": "numeric"
      }
    ]
  },
  "NODE_ENV": {
    "required": true,
    "description": "This defines the current environment, one of: develop, homolog, beta",
    "validators": [
      {
        "name": "in",
        "options": ["develop", "staging", "production"]
      }
    ]
  },
  "DEBUG": {
    "required": true,
    "default": false,
    "description": "Debug flag to show aditional logs"
  },
  "DB_TYPE": {
    "required": true,
    "description": "Database driver"
  },
  "DB_HOST": {
    "required": true,
    "description": "Database host"
  },
  "DB_PORT": {
    "required": true,
    "description": "Database port"
  },
  "DB_USERNAME": {
    "required": true,
    "description": "Database username"
  },
  "DB_PASSWORD": {
    "required": true,
    "description": "Database password"
  },
  "DB_DATABASE": {
    "required": true,
    "description": "Database schema"
  }
}
